<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_300">

    <Button
        android:id="@+id/btn_materi_1"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_white_circlebutton"
        android:drawableStart="@drawable/ic_open_book"
        android:drawableLeft="@drawable/ic_open_book"
        android:padding="8dp"
        android:text="Materi 1"
        android:textAlignment="center"
        android:textColor="@color/cyan_800"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_materi_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_materi_2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_circlebutton"
        android:drawableStart="@drawable/ic_open_book"
        android:drawableLeft="@drawable/ic_open_book"
        android:padding="8dp"
        android:text="Materi 2"
        android:textAlignment="center"
        android:textColor="@color/cyan_800"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_materi_3"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_white_circlebutton"
        android:drawableStart="@drawable/ic_open_book"
        android:drawableLeft="@drawable/ic_open_book"
        android:padding="8dp"
        android:text="Materi 3"
        android:textAlignment="center"
        android:textColor="@color/cyan_800"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_materi_2" />
</androidx.constraintlayout.widget.ConstraintLayout>